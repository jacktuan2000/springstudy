<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">


	  
	<mvc:annotation-driven>
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
				<property name="objectMapper">
					<bean class="com.ycnet.belink.core.HibernateAwareObjectMapper" />
				</property>
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>
	
	<beans profile="belink">
		<context:component-scan base-package="com.ycnet.belink.web.controller.pub">
		  
			<context:exclude-filter type="regex" expression="com.ycnet.belink.web.controller.pub.demo.*"/>
		</context:component-scan>
	</beans>
	<beans profile="demo">
		<context:component-scan base-package="com.ycnet.belink.web.controller.pub.demo" />
	</beans>
   
</beans>