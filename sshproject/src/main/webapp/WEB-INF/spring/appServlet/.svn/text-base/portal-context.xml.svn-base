<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
		
	<mvc:annotation-driven/>
	<beans profile="demo">
		<context:component-scan base-package="com.ycnet.belink.web.controller.portal.demo" />
	</beans>
	<beans profile="belink">
		<context:component-scan base-package="com.ycnet.belink.web.controller.portal">
			<context:exclude-filter type="regex" expression="com.ycnet.belink.web.controller.portal.demo.*"/>
		</context:component-scan>
		<mvc:interceptors>
			<bean class="com.ycnet.belink.web.interceptor.UserFootmarkInterceptor" />
	<!-- 		<interceptor> -->
	<!-- 			<mapping path="/group/manage/**"/> -->
	<!-- 			<beans:bean class="com.ycnet.belink.web.interceptor.GroupManageInterceptor"> -->
	<!-- 				<beans:property name="targetUrl" value="/portal/group/manageDeny"></beans:property> -->
	<!-- 			</beans:bean> -->
	<!-- 		</interceptor> -->
			<mvc:interceptor>
				<mvc:mapping path="/corp/manage/**"/>
				<bean class="com.ycnet.belink.web.interceptor.EnterpriseManageInterceptor">
					<property name="targetUrl" value="/portal/corp/manageDeny"></property>
				</bean>
			</mvc:interceptor>
		</mvc:interceptors>
	</beans>
</beans>
